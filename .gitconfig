[user]
	name = Luke Lynch
	email = luke@lukelynch.io
	signingkey = /Users/lukelynch/.ssh/id_rsa.pub
[alias]
	fa = fetch --all
	co = checkout
	pl = log --graph --color --decorate --oneline --all
	al = commit --amend --no-edit
	pam = !git pull && git merge -
	# ! in front of an alias runs it as a regular terminal command
	fuckit = reset --hard
[core]
	autocrlf = input
[push]
	autoSetupRemote = true
[commit]
	gpgsign = true
[gpg]
	format = ssh
